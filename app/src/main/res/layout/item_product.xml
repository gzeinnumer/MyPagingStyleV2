<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--gzn_rv_item-->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_margin"
        android:layout_marginTop="@dimen/def_margin_half"
        android:layout_marginRight="@dimen/def_margin"
        android:layout_marginBottom="@dimen/def_margin_half"
        app:cardCornerRadius="@dimen/radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/def_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                style="@style/MyTextContent"
                android:text="Title" />

            <TextView
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:id="@+id/tv_date"
                style="@style/MyTextContent"
                android:text="Date" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>